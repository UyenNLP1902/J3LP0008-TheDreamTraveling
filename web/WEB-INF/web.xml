    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>uyennlp.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>uyennlp.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartAppServlet</servlet-name>
        <servlet-class>uyennlp.controller.StartAppServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>uyennlp.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertTourServlet</servlet-name>
        <servlet-class>uyennlp.controller.InsertTourServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>uyennlp.controller.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowTourInformationServlet</servlet-name>
        <servlet-class>uyennlp.controller.ShowTourInformationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrderServlet</servlet-name>
        <servlet-class>uyennlp.controller.AddOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveTourServlet</servlet-name>
        <servlet-class>uyennlp.controller.RemoveTourServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>uyennlp.controller.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTourServlet</servlet-name>
        <servlet-class>uyennlp.controller.UpdateTourServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>uyennlp.controller.CheckOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProceedPaymentServlet</servlet-name>
        <servlet-class>uyennlp.controller.ProceedPaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginFacebookServlet</servlet-name>
        <servlet-class>uyennlp.controller.LoginFacebookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartAppServlet</servlet-name>
        <url-pattern>/StartAppServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertTourServlet</servlet-name>
        <url-pattern>/InsertTourServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowTourInformationServlet</servlet-name>
        <url-pattern>/ShowTourInformationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOrderServlet</servlet-name>
        <url-pattern>/AddOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveTourServlet</servlet-name>
        <url-pattern>/RemoveTourServlet</url-pattern>
